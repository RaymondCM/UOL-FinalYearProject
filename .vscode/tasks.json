{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // ROOT WITHOUT COMMAND
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [],
    "options": {
        "cwd": "${workspaceRoot}/build/"
    },
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "linux": {
        "command": "bash",
        "args": [
            "-c"
        ],
        "isShellCommand": true,
        "showOutput": "always",
        "suppressTaskName": true,
        "options": {
            "cwd": "${workspaceRoot}/build/"
        },
        "tasks": [
            {
                "taskName": "build",
                "isBuildCommand": true,
                "args": [
                    "make ProjectY3"
                ]
            },
            {
                "taskName": "clean",
                "args": [
                    "make clean"
                ]
            }
        ]
    }
}